<Page x:Class="WeatherMoment.ChangeLocation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WeatherMoment"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="700"
      Title="ChangeLocation">

    <Grid Background="{Binding BackgroundColor}">
        <TextBlock x:Name="Label" 
               Text="Change Location" 
               Margin="0,109,0,0" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               TextAlignment="Center"
               Width="340"
               Height="56"
               FontFamily="Geist" 
               FontWeight="SemiBold"
               FontSize="40" 
               Foreground="{Binding ForegroundColor}"
               />

        <TextBox x:Name="TextBox"
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center" 
                 TextWrapping="Wrap" 
                 TextAlignment="Center"
                 Text="" 
                 Padding="4" 
                 Width="160"
                 Height="32"
                 FontFamily="Geist" 
                 FontWeight="Medium"
                 FontSize="18" 
                 />

        <TextBlock x:Name="MessageBlock" 
                   Margin="0,175,0,0" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   TextAlignment="Center"
                   TextWrapping="Wrap" 
                   Text="Enter a 5-digit zip code below." 
                   Height="32" 
                   Width="340"
                   FontFamily="Geist" 
                   FontWeight="Regular"
                   FontSize="16" 
                   Foreground="{Binding ForegroundColor}"
                   />

        <Border x:Name="ButtonBg" 
                Margin="0,310,0,0"
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Width="160"
                Height="32"
                BorderBrush="Transparent" 
                CornerRadius="16"
                BorderThickness="1"
                Background="{Binding ForegroundColor}"
                Canvas.ZIndex="0">

            <Button x:Name="ConfirmButton" 
                        Click="ConfirmButton_Click"
                        Content="Confirm" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Width="120"
                        Height="32"
                        FontFamily="Geist" 
                        FontWeight="SemiBold"
                        FontSize="14" 
                        Background="{Binding ForegroundColor}"
                        Foreground="{Binding BackgroundColor}"
                        BorderBrush="Transparent"
                        />
        </Border>


        <Border x:Name="ButtonBg2" 
                Margin="0,350,0,0"
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Width="160"
                Height="32"
                BorderBrush="Transparent" 
                CornerRadius="16"
                BorderThickness="1"
                Background="{Binding ForegroundColor}"
                Canvas.ZIndex="0">
                <Button x:Name="BackButton"
                        Click="BackButton_Click"
                        Content="Back" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Width="120"
                        Height="32"
                        FontFamily="Geist" 
                        FontWeight="SemiBold"
                        FontSize="14" 
                        Background="{Binding ForegroundColor}"
                        Foreground="{Binding BackgroundColor}" 
                        BorderBrush="Transparent"
                 />
        </Border>

    </Grid>
</Page>
